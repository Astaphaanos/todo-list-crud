<h1>Todo List</h1>

<div class="tarefas-container">
  {{#each tarefa}}
    <div class="tarefa {{#if checkbox}}concluida{{/if}}" data-id="{{id}}">
      
      <h3 class="titulo">{{titulo}}</h3>


      <p>Status: <span class="status-text">
        {{#if checkbox}}Concluída{{else}}Pendente{{/if}}
      </span></p>

      {{#unless checkbox}}
        <button class="btn-concluir" data-id="{{id}}">✅ Concluir</button>
      {{/unless}}

      <div class="bnt-tarefa">

        <button class="editar-btn">
          <a href="/editartarefa/{{id}}">✏️ Editar</a>
        </button>

        <form action="/deletar/{{id}}" method="POST" style="display:inline;">
          <button class="deletar-btn" style="background-color: red; color: #fff;">
            🗑 Excluir
          </button>
        </form>
      </div>

    </div>
  {{/each}}
</div>

